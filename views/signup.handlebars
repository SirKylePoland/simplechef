<!doctype html>
<html>
<head>
	<title>Simple Chef</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/mine.css" rel="stylesheet">
</head>

<body>
	<div class="container">
		<div id="logo">
			<h1>Sign-Up</h1>
		</div>
		<div id="circle"></div>
		<form id="loginscreen" role="form" method="get" action="/home">
	    	<div class="form-group">
	    		<label for="name"></label>
				<input type="text" class="form-control" id="username" placeholder="username" name="name">
	    	</div>
	    	<div class="form-group">
	    		<label for="password"></label>
	    		<input type="password" class="form-control" id="password" placeholder="password" name="password">
	    	</div>
	    	<input type="submit" id="submitBtn" class="button" value="Submit">
	    	
		</form>
	</div>
	<script src="/js/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>
