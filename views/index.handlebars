<!doctype html>
<html>
<head>
	<title>Simple Chef</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/mine.css" rel="stylesheet">
</head>

<body>
	<div class="container">
		<div id="logo">
			<img src="/images/chefhat.png" alt="" />
			<h1>Simple Chef</h1>
		</div>
		<div id="circle"></div>
		{{#if message}}
			<div class="alert alert-danger" style="margin-top: 10px; margin-bottom: 0px;">{{message}}</div>
		{{/if}}
		<form id="loginscreen" role="form" method="post" action="/login">
	    	<div class="form-group">
	    		<label for="name"></label>
				<input type="text" class="form-control" id="username" name="username" placeholder="username" name="name">
	    	</div>
	    	<div class="form-group">
	    		<label for="password"></label>
	    		<input type="password" class="form-control" id="password" name="password" placeholder="password" name="password">
	    	</div>
	    	<input type="submit" id="submitBtn" class="button" value="Sign In">
	    	<a href ="/signup">
        	  	<input type="button" id="submitBtn" class="button" value="Sign Up">
        	</a>
		</form>
	</div>
	<script src="/js/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
</body>
</html>
